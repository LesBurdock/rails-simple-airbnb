<div class="container">
    <%= image_tag('map.png',:class => "img_preview") %>
  <div class= "text_container">
    <div class= "text_box">
      <h4><%=@flat.name%></h4>
      <p><%=@flat.address%></p>
    </div>

    <div class= "text_box">
      <h4>A bit more about this flat</h4>
      <p><%= @flat.description%></p>
    </div>

    <div class= "text_box">
      <h4>Details</h4>
      <p><i class="fas fa-user-friends"></i><%= @flat.number_of_guests %></p>
      <p><i class="fas fa-euro-sign"></i><%= @flat.price_per_night %></p>
    </div>
</div>

