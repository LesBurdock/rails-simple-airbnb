<div class = 'form m-5'>
  <%= simple_form_for(flat) do |f| %>
<div class= "form_contain">
  <h4>Basic Information</h4>
  <div class="basic">
    <%= f.input :name %>
    <%= f.input :address %>
  </div>
  <h4>Detailed description</h4>
  <div class="details">
    <%= f.input :description %>
    <%= f.input :price_per_night %>
    <%= f.input :number_of_guests %>
    <%= f.input :pic_url %>
  </div>
    <%= f.submit 'Add new Listing', class:'btn btn-primary'%>
<% end %>
</div>
</div>
