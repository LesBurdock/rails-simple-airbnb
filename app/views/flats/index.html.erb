<div id = 'cards'>
<% @flats.each do |flat| %>
  <div class="card-trip">
    <%= image_tag(flat.pic_url, alt: "flats_view") %>
    <div class="card-trip-infos">
      <div>
        <h5><strong><%= flat.name %></strong></h5>
        <p><%= flat.description%></p>
        <span class = "icons">
          <p class= "pt-2 mr-2"><i class="fas fa-user-friends pr-2"></i><%= flat.number_of_guests %></p>
          <p class="pt-2" ><i class="fas fa-euro-sign"></i><%= flat.price_per_night %></p>
        </span>
      </div>
    </div>
    <div class= "m-3" id="links">
      <span class= "m-2"><%= link_to 'More Info', flat_path(flat) %></span>
      <span class= "m-2"><%= link_to 'Edit', edit_flat_path(flat) %></span>
      <span class= "m-2"><%= link_to 'Remove', flat_path(flat) %></span>
    </div>
  </div>
<%end%>
</div>

